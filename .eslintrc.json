{
  "root": true,
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "next",
    "next/core-web-vitals"
  ],
  "rules": {
    "eol-last": ["error", "always"]
  },
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  }
}
